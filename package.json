{
  "name": "d2l-search-widget",
  "private": true,
  "scripts": {
    "prebuild": "rimraf dist && mkdir dist",
    "build": "cp d2l-*.html ./dist/",
    "postinstall": "bower install",
    "test": "npm run test:lint:js && && npm run test:lint:wc && wct",
    "test:lint:js": "eslint --ext .js,.html . test/ demo/",
    "test:lint:wc": "polymer lint",
    "test:no-lint": "cross-env LAUNCHPAD_BROWSERS=chrome wct -p",
    "test:unit:local": "polymer test"
  },
  "author": "D2L Corporation",
  "license": "Apache-2.0",
  "devDependencies": {
    "bower": "^1.7.9",
    "cross-env": "^5.0.5",
    "eslint": "^4.7.2",
    "eslint-config-brightspace": "^0.4.0",
    "eslint-plugin-html": "^3.2.2",
    "polymer-cli": "^1.5.5",
    "rimraf": "^2.5.4",
    "web-component-tester": "^6.2.0"
  }
}
